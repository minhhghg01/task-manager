<!DOCTYPE html>
<html lang="vi" data-bs-theme="light">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hệ thống Quản lý Bệnh Viện</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            border-right: 1px solid #dee2e6;
            transition: all 0.3s;
        }

        .navbar .dropdown-menu {
            position: absolute;
            right: 0;
            left: auto;
        }

        .navbar .nav-link {
            color: rgba(255, 255, 255, .85);
            cursor: pointer;
        }

        .navbar .nav-link:hover {
            color: #fff;
        }
    </style>
</head>

<body data-userid="<%= (typeof user !== 'undefined' && user) ? user.id : '' %>">

    <header class="navbar navbar-dark sticky-top bg-primary flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/dashboard">Bệnh Viện App</a>

        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#sidebarMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-nav px-3">
            <div class="nav-item text-nowrap dropdown">
                <a class="nav-link dropdown-toggle fw-bold" href="#" id="profileDropdown" role="button"
                    data-bs-toggle="dropdown">
                    <span data-feather="user"></span>
                    <%= (typeof user !=='undefined' && user) ? user.fullname : 'Hồ sơ' %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow" style="min-width: 250px;">
                    <li>
                        <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#changePassModal">
                            <span data-feather="key"></span> Đổi mật khẩu
                        </a>
                    </li>

                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <li class="px-3 py-1">
                        <div class="form-check form-switch d-flex justify-content-between align-items-center ps-0">
                            <label class="form-check-label" for="darkModeSwitch">Chế độ Tối (Dark)</label>
                            <input class="form-check-input ms-2" type="checkbox" id="darkModeSwitch"
                                style="cursor: pointer;">
                        </div>
                    </li>

                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li><a class="dropdown-item text-danger" href="/logout"><span data-feather="log-out"></span> Đăng
                            xuất</a></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <%- include('../partials/sidebar') %>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pt-3">

                <div class="modal fade" id="changePassModal" tabindex="-1">
                    <div class="modal-dialog">
                        <form action="/change-password" method="POST">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Đổi mật khẩu</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label>Mật khẩu hiện tại</label>
                                        <input type="password" name="currentPassword" class="form-control" required>
                                    </div>
                                    <div class="mb-3">
                                        <label>Mật khẩu mới</label>
                                        <input type="password" name="newPassword" class="form-control" required
                                            minlength="6">
                                    </div>
                                    <div class="mb-3">
                                        <label>Nhập lại mật khẩu mới</label>
                                        <input type="password" name="confirmPassword" class="form-control" required
                                            minlength="6">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <script>
                    document.addEventListener('DOMContentLoaded', () => {
                        const html = document.documentElement;
                        const switchInput = document.getElementById('darkModeSwitch');
                        const sidebar = document.getElementById('sidebarMenu');

                        // 1. Kiểm tra LocalStorage khi load trang
                        const currentTheme = localStorage.getItem('theme');
                        if (currentTheme === 'dark') {
                            html.setAttribute('data-bs-theme', 'dark');
                            switchInput.checked = true;
                            // Chuyển sidebar sang màu tối
                            sidebar.classList.remove('bg-light');
                            sidebar.classList.add('bg-dark');
                        }

                        // 2. Xử lý sự kiện bấm nút Switch
                        switchInput.addEventListener('change', () => {
                            if (switchInput.checked) {
                                html.setAttribute('data-bs-theme', 'dark');
                                localStorage.setItem('theme', 'dark');
                                sidebar.classList.remove('bg-light');
                                sidebar.classList.add('bg-dark');
                            } else {
                                html.setAttribute('data-bs-theme', 'light');
                                localStorage.setItem('theme', 'light');
                                sidebar.classList.remove('bg-dark');
                                sidebar.classList.add('bg-light');
                            }
                        });
                    });
                </script>