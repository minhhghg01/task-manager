<%- include('../partials/header') %>

    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">
            <%= (typeof pageTitle !=='undefined' ) ? pageTitle : 'Tổng quan công việc' %>
        </h1>

        <div class="btn-toolbar mb-2 mb-md-0">

            <a href="/tasks/invited" class="btn btn-sm btn-outline-warning d-flex align-items-center gap-2 me-2">
                <span data-feather="mail"></span> Lời mời hợp tác
            </a>
            <% if (user.role !=='ADMIN' && user.role !=='STAFF' ) { %>
                <button type="button" class="btn btn-sm btn-primary d-flex align-items-center gap-2"
                    data-bs-toggle="modal" data-bs-target="#createTaskModal">
                    <span data-feather="plus"></span> Giao việc mới
                </button>
                <% } %>

                    <% if (user.role==='STAFF' || (typeof filterType !=='undefined' && filterType==='mine' )) { %>
                        <button type="button"
                            class="btn btn-sm btn-outline-success d-flex align-items-center gap-2 ms-2"
                            data-bs-toggle="modal" data-bs-target="#createTaskModal" data-auto-self="true">
                            <span data-feather="user-check"></span> Tự tạo việc
                        </button>
                        <% } %>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle datatable-init">
            <thead class="table-dark">
                <tr>
                    <th style="width: 5%">STT</th>
                    <th style="width: 21%">Tiêu đề</th>
                    <th style="width: 15%">Người nhận</th>
                    <th style="width: 15%">Bắt đầu</th>
                    <th style="width: 15%">Hạn chót</th>
                    <th style="width: 10%">Người tạo</th>
                    <th style="width: 7%">Ưu tiên</th>
                    <th style="width: 7%">Trạng thái</th>
                    <th style="width: 5%">Nhãn</th>
                </tr>
            </thead>
            <tbody>
                <% if (tasks && tasks.length> 0) { %>
                    <% tasks.forEach((task, index)=> { %>
                        <tr style="cursor: pointer;" onclick="window.location.href='/tasks/<%= task.id %>'">

                            <td>
                                <%= index + 1 %>
                            </td>

                            <td>
                                <strong>
                                    <%= task.title %>
                                </strong>
                                <% if(task.attachment_path) { %>
                                    <i data-feather="paperclip" class="text-muted" style="width:14px"></i>
                                    <% } %>
                                        <br>
                                        <small class="text-muted text-truncate"
                                            style="max-width: 250px; display: inline-block;">
                                            <%= task.description %>
                                        </small>

                                        <% if(task.progress> 0 && task.progress < 100) { %>
                                                <div class="progress mt-1" style="height: 3px; width: 50%;">
                                                    <div class="progress-bar" style="width: <%= task.progress %>%;">
                                                    </div>
                                                </div>
                                                <% } %>
                            </td>

                            <td>
                                <small class="text-primary fw-bold">
                                    <%= task.assigneeNames || 'Chưa giao' %>
                                </small>
                            </td>

                            <td>
                                <%= task.start_date ? new Date(task.start_date).toLocaleDateString('vi-VN') : '---' %>
                            </td>

                            <td>
                                <% var dueDate=task.due_date ? new Date(task.due_date) : null; var now=new Date(); var
                                    isOverdue=dueDate && dueDate < now && task.status !=='Hoàn thành' ; %>
                                    <span class="<%= isOverdue ? 'text-danger fw-bold' : '' %>">
                                        <%= task.formattedDueDate || (dueDate ? dueDate.toLocaleDateString('vi-VN')
                                            : '---' ) %>
                                    </span>

                                    <% if(isOverdue) { %>
                                        <i data-feather="alert-circle" class="text-danger" style="width:14px"></i>
                                        <% } %>
                            </td>

                            <td>
                                <%= task.Creator ? task.Creator.fullname : 'N/A' %>
                            </td>

                            <td>
                                <% var pColor='secondary' ; if(task.priority=='Cao (Gấp)' ) pColor='danger' ; else
                                    if(task.priority=='Trung bình' ) pColor='warning text-dark' ; else
                                    if(task.priority=='Thấp' ) pColor='info text-dark' ; %>
                                    <span class="badge bg-<%= pColor %>">
                                        <%= task.priority %>
                                    </span>
                            </td>

                            <td>
                                <% var sColor='secondary' ; if(task.status=='Mới tạo' ) sColor='info text-dark' ; else
                                    if(task.status=='Đang thực hiện' ) sColor='primary' ; else
                                    if(task.status=='Hoàn thành' ) sColor='success' ; else if(task.status=='Quá hạn' )
                                    sColor='danger' ; else if(task.status=='Đang chờ' ) sColor='warning text-dark' ; %>
                                    <span class="badge bg-<%= sColor %>">
                                        <%= task.status %>
                                    </span>
                            </td>

                            <td>
                                <% if (task.tags) { %>
                                    <span class="badge border border-info text-info">
                                        <%= task.tags %>
                                    </span>
                                    <% } else { %>
                                        <span class="text-muted">---</span>
                                        <% } %>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="9" class="text-center text-muted py-3">Không có dữ liệu</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/modal-create-task') %>
        <%- include('../partials/footer') %>