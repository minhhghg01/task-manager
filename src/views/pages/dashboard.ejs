<%- include('../partials/header') %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-3 mb-4 border-bottom">
        <div>
            <h1 class="h2 fw-bold text-primary">
                <%= (locals.pageTitle) ? pageTitle : 'Tổng quan công việc' %>
            </h1>
            <% if (locals.isDashboard) { %>
                <small class="text-muted">Xin chào, <strong>
                        <%= user.fullname %>
                    </strong>! Dưới đây là báo cáo hiệu suất của bạn.</small>
                <% } %>
        </div>

        <div class="btn-toolbar mb-2 mb-md-0 gap-2">

            <a href="/tasks/invited"
                class="btn btn-sm btn-outline-warning d-flex align-items-center gap-2 shadow-sm position-relative btn-no-hover">
                <span data-feather="mail"></span> Lời mời hợp tác

                <% if (typeof invitationCount !=='undefined' && invitationCount> 0) { %>
                    <span
                        class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-light">
                        <%= invitationCount %>
                            <span class="visually-hidden">lời mời mới</span>
                    </span>
                    <% } %>
            </a>

            <% if (user.role !=='ADMIN' && user.role !=='STAFF' ) { %>
                <button type="button" class="btn btn-sm btn-primary d-flex align-items-center gap-2 shadow-sm"
                    data-bs-toggle="modal" data-bs-target="#createTaskModal">
                    <span data-feather="plus"></span> Giao việc mới
                </button>
                <% } %>

                    <% if (user.role==='STAFF' || (typeof filterType !=='undefined' && filterType==='mine' )) { %>
                        <button type="button"
                            class="btn btn-sm btn-outline-success d-flex align-items-center gap-2 shadow-sm"
                            data-bs-toggle="modal" data-bs-target="#createTaskModal" data-auto-self="true">
                            <span data-feather="user-check"></span> Tự tạo việc
                        </button>
                        <% } %>
        </div>

        <style>
            .btn-no-hover {
                color: #000000 !important;
                /* Màu chữ vàng */
                border-color: #ffc107 !important;
                /* Viền vàng */
                background-color: #ffc107 !important;
                /* Nền trong suốt */
            }

            /* Khi hover vẫn giữ nguyên màu như trên */
            .btn-no-hover:hover {
                transform: scale(1.03);
                transition: all 0.3s ease;
                cursor: pointer;
            }
        </style>
    </div>

    <% /* --- TRƯỜNG HỢP 1: TRANG DASHBOARD (HIỆN BIỂU ĐỒ) --- */ %>
        <% if (locals.isDashboard) { %>

            <div class="row mb-4">
                <div class="col-md-5 mb-3 mb-md-0">
                    <div class="card shadow border-0 h-100 rounded-3">
                        <div class="card-body">
                            <h6 class="card-title text-uppercase text-muted fw-bold mb-3 small">Hiệu suất cá nhân</h6>

                            <div class="d-flex align-items-center mb-4">
                                <div class="flex-shrink-0 position-relative">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center bg-gradient bg-primary text-white shadow"
                                        style="width: 80px; height: 80px;">
                                        <span class="fs-2 fw-bold">
                                            <%= (locals.myAvgScore) ? myAvgScore : '--' %>
                                        </span>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h4 class="mb-0 fw-bold text-dark">Điểm trung bình</h4>
                                    <small class="text-muted">Đánh giá trên các công việc của bạn.</small>
                                </div>
                            </div>

                            <div class="row text-center g-2">
                                <div class="col-4">
                                    <div class="p-2 border rounded bg-light h-100">
                                        <h5 class="text-success mb-0 fw-bold">
                                            <%= (locals.stats) ? stats.completed : 0 %>
                                        </h5>
                                        <small class="text-muted" style="font-size: 0.75rem;">Hoàn thành</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="p-2 border rounded bg-light h-100">
                                        <h5 class="text-primary mb-0 fw-bold">
                                            <%= (locals.stats) ? stats.inProgress : 0 %>
                                        </h5>
                                        <small class="text-muted" style="font-size: 0.75rem;">Đang làm</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="p-2 border rounded bg-light h-100">
                                        <h5 class="text-danger mb-0 fw-bold">
                                            <%= (locals.stats) ? stats.overdue : 0 %>
                                        </h5>
                                        <small class="text-muted" style="font-size: 0.75rem;">Quá hạn</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="card shadow border-0 h-100 rounded-3">
                        <div class="card-body">
                            <h6 class="card-title text-uppercase text-muted fw-bold mb-3 small">Tỷ lệ trạng thái công
                                việc</h6>

                            <div style="height: 260px; width: 100%; position: relative;">
                                <canvas id="taskStatusChart"></canvas>

                                <% const hasData=(typeof stats !=='undefined' ) && (stats.completed + stats.inProgress +
                                    stats.overdue> 0);
                                    %>

                                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex flex-column align-items-center justify-content-center"
                                        style="pointer-events: none; padding-bottom: 30px;">
                                        <% if (hasData) { %>
                                            <h1 class="mb-0 fw-bold text-dark"
                                                style="font-size: 2.5rem; line-height: 1;">
                                                <%= stats.totalTasks %>
                                            </h1>
                                            <span class="text-muted fw-bold text-uppercase"
                                                style="font-size: 0.7rem; letter-spacing: 1px;">
                                                Công việc
                                            </span>
                                            <% } else { %>
                                                <span class="text-muted small bg-white px-2">Chưa có dữ liệu</span>
                                                <% } %>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    const ctx = document.getElementById('taskStatusChart');
                    if (ctx) {
                        const completed = <%= (locals.stats) ? stats.completed : 0 %>;
                        const inProgress = <%= (locals.stats) ? stats.inProgress : 0 %>;
                        const overdue = <%= (locals.stats) ? stats.overdue : 0 %>;
                        const total = completed + inProgress + overdue;

                        // Nếu không có dữ liệu thì hiện 1 vòng xám
                        const data = total === 0 ? [1] : [completed, inProgress, overdue];
                        const colors = total === 0 ? ['#f8f9fa'] : ['#198754', '#0d6efd', '#dc3545'];
                        const labels = total === 0 ? ['Chưa có dữ liệu'] : ['Hoàn thành', 'Đang thực hiện', 'Quá hạn'];

                        new Chart(ctx, {
                            type: 'doughnut',
                            data: {
                                labels: labels,
                                datasets: [{
                                    data: data,
                                    backgroundColor: colors,
                                    borderWidth: 2, // Viền trắng cho đẹp
                                    borderColor: '#ffffff',
                                    hoverOffset: 4
                                }]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: false,
                                cutout: '75%', // Làm vòng tròn mỏng hơn chút cho hiện đại
                                plugins: {
                                    legend: {
                                        position: 'bottom', // [QUAN TRỌNG] Đưa chú thích xuống dưới để hình tròn cân đối
                                        labels: {
                                            usePointStyle: true,
                                            padding: 20,
                                            font: { size: 11 }
                                        }
                                    },
                                    tooltip: {
                                        enabled: total !== 0 // Ẩn tooltip nếu không có dữ liệu
                                    }
                                }
                            }
                        });
                    }
                });
            </script>

            <% /* --- TRƯỜNG HỢP 2: CÁC TRANG DANH SÁCH KHÁC (HIỆN BẢNG) --- */ %>
                <% } else { %>

                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-body p-0">
                            <div class="table-responsive"
                                style="min-height: 400px; border-radius: 0.5rem; padding-bottom: 80px;">
                                <table class="table table-hover align-middle mb-0" id="mainTable">
                                    <thead class="sticky-top bg-white"
                                        style="z-index: 100; box-shadow: 0 2px 5px rgba(0,0,0,0.05);">
                                        <tr class="table-dark text-white">
                                            <th class="text-center text-nowrap py-3" style="width: 5%">STT</th>
                                            <th class="text-nowrap py-3" style="width: 20%">Tiêu đề</th>
                                            <th class="text-nowrap py-3" style="width: 15%">Người nhận</th>
                                            <th class="text-nowrap py-3" style="width: 10%">Bắt đầu</th>
                                            <th class="text-nowrap py-3" style="width: 10%">Hạn chót</th>
                                            <th class="text-nowrap py-3" style="width: 10%">Người tạo</th>
                                            <th class="text-nowrap py-3" style="width: 10%">Ưu tiên</th>
                                            <th class="text-nowrap py-3" style="width: 10%">Trạng thái</th>
                                            <th class="text-nowrap py-3" style="width: 10%">Nhãn</th>
                                        </tr>

                                        <tr class="bg-light border-bottom align-middle filter-row">
                                            <td class="p-1"></td>
                                            <td class="p-1">
                                                <input type="text"
                                                    class="form-control form-control-sm filter-input shadow-none border-secondary-subtle"
                                                    data-col="1" placeholder="Tìm..." style="font-size: 0.85rem;">
                                            </td>
                                            <td class="p-1 position-relative">
                                                <div class="dropdown filter-dropdown" data-col="2">
                                                    <button
                                                        class="btn btn-sm btn-white border border-secondary-subtle w-100 dropdown-toggle text-truncate shadow-none d-flex justify-content-between align-items-center px-2"
                                                        type="button" data-bs-toggle="dropdown"
                                                        style="font-size: 0.8rem; background: #fff;">
                                                        <span>Tất cả</span>
                                                    </button>
                                                    <div class="dropdown-menu p-2 shadow border-0"
                                                        style="max-height: 300px; overflow-y: auto; width: 220px;">
                                                        <input type="text" class="form-control form-control-sm mb-2"
                                                            placeholder="Tìm người..."
                                                            onkeyup="filterDropdownItems(this)">
                                                        <div class="filter-options-container"></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="p-1">
                                                <div class="d-flex flex-column gap-1">
                                                    <input type="date"
                                                        class="form-control form-control-sm filter-date-from shadow-none px-1 border-secondary-subtle"
                                                        data-col="3" style="font-size: 0.75rem; height: 24px;">
                                                    <input type="date"
                                                        class="form-control form-control-sm filter-date-to shadow-none px-1 border-secondary-subtle"
                                                        data-col="3" style="font-size: 0.75rem; height: 24px;">
                                                </div>
                                            </td>
                                            <td class="p-1">
                                                <div class="d-flex flex-column gap-1">
                                                    <input type="date"
                                                        class="form-control form-control-sm filter-date-from shadow-none px-1 border-secondary-subtle"
                                                        data-col="4" style="font-size: 0.75rem; height: 24px;">
                                                    <input type="date"
                                                        class="form-control form-control-sm filter-date-to shadow-none px-1 border-secondary-subtle"
                                                        data-col="4" style="font-size: 0.75rem; height: 24px;">
                                                </div>
                                            </td>
                                            <td class="p-1 position-relative">
                                                <div class="dropdown filter-dropdown" data-col="5">
                                                    <button
                                                        class="btn btn-sm btn-white border border-secondary-subtle w-100 dropdown-toggle text-truncate shadow-none px-1"
                                                        type="button" data-bs-toggle="dropdown"
                                                        style="font-size: 0.8rem; background: #fff;">All</button>
                                                    <div class="dropdown-menu p-2 shadow border-0"
                                                        style="max-height: 300px; overflow-y: auto;">
                                                        <div class="filter-options-container"></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="p-1 position-relative">
                                                <div class="dropdown filter-dropdown" data-col="6">
                                                    <button
                                                        class="btn btn-sm btn-white border border-secondary-subtle w-100 dropdown-toggle text-truncate shadow-none px-1"
                                                        type="button" data-bs-toggle="dropdown"
                                                        style="font-size: 0.8rem; background: #fff;">All</button>
                                                    <div class="dropdown-menu p-2 shadow border-0">
                                                        <div class="filter-options-container"></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="p-1 position-relative">
                                                <div class="dropdown filter-dropdown" data-col="7">
                                                    <button
                                                        class="btn btn-sm btn-white border border-secondary-subtle w-100 dropdown-toggle text-truncate shadow-none px-1"
                                                        type="button" data-bs-toggle="dropdown"
                                                        style="font-size: 0.8rem; background: #fff;">All</button>
                                                    <div class="dropdown-menu p-2 shadow border-0">
                                                        <div class="filter-options-container"></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="p-1 position-relative">
                                                <div class="dropdown filter-dropdown" data-col="8"
                                                    data-multi-value="true">
                                                    <button
                                                        class="btn btn-sm btn-white border border-secondary-subtle w-100 dropdown-toggle text-truncate shadow-none px-1"
                                                        type="button" data-bs-toggle="dropdown"
                                                        style="font-size: 0.8rem; background: #fff;">Tags</button>
                                                    <div class="dropdown-menu p-2 shadow border-0 dropdown-menu-end"
                                                        style="width: 200px;">
                                                        <div class="filter-options-container"></div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (tasks && tasks.length> 0) { %>
                                            <% tasks.forEach((task, index)=> { %>
                                                <tr style="cursor: pointer;"
                                                    onclick="window.location.href='/tasks/<%= task.id %>'">
                                                    <td class="text-center">
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <strong class="text-dark">
                                                            <%= task.title %>
                                                        </strong>
                                                        <% if(task.attachment_path) { %>
                                                            <i data-feather="paperclip" class="text-muted ms-1"
                                                                style="width:12px"></i>
                                                            <% } %>
                                                                <div class="text-muted text-truncate small mt-1"
                                                                    style="max-width: 250px;">
                                                                    <%= task.description %>
                                                                </div>
                                                                <% if(task.progress> 0 && task.progress < 100) { %>
                                                                        <div class="progress mt-1 bg-secondary-subtle"
                                                                            style="height: 4px; width: 60%;">
                                                                            <div class="progress-bar bg-primary"
                                                                                style="width: <%= task.progress %>%;">
                                                                            </div>
                                                                        </div>
                                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <small class="text-primary fw-bold">
                                                            <%= task.assigneeNames || 'Chưa giao' %>
                                                        </small>
                                                    </td>
                                                    <td>
                                                        <%= task.start_date ? new
                                                            Date(task.start_date).toLocaleDateString('vi-VN') : '-' %>
                                                    </td>
                                                    <td>
                                                        <% var dueDate=task.due_date ? new Date(task.due_date) : null;
                                                            var now=new Date(); var isOverdue=dueDate && dueDate < now
                                                            && task.status !=='Hoàn thành' ; %>
                                                            <span class="<%= isOverdue ? 'text-danger fw-bold' : '' %>">
                                                                <%= task.formattedDueDate || (dueDate ?
                                                                    dueDate.toLocaleDateString('vi-VN') : '-' ) %>
                                                            </span>
                                                            <% if(isOverdue) { %> <i data-feather="alert-circle"
                                                                    class="text-danger" style="width:14px"></i>
                                                                <% } %>
                                                    </td>
                                                    <td><small>
                                                            <%= task.Creator ? task.Creator.fullname : 'N/A' %>
                                                        </small></td>
                                                    <td>
                                                        <% var pColor='secondary' ; if(task.priority=='Cao (Gấp)' )
                                                            pColor='danger' ; else if(task.priority=='Trung bình' )
                                                            pColor='warning text-dark' ; else if(task.priority=='Thấp' )
                                                            pColor='info text-dark' ; %>
                                                            <span class="badge bg-<%= pColor %> fw-normal">
                                                                <%= task.priority %>
                                                            </span>
                                                    </td>
                                                    <td>
                                                        <% var sColor='secondary' ; if(task.status=='Mới tạo' )
                                                            sColor='info text-dark' ; else
                                                            if(task.status=='Đang thực hiện' ) sColor='primary' ; else
                                                            if(task.status=='Hoàn thành' ) sColor='success' ; else
                                                            if(task.status=='Quá hạn' ) sColor='danger' ; else
                                                            if(task.status=='Đang chờ' ) sColor='warning text-dark' ; %>
                                                            <span class="badge bg-<%= sColor %> fw-normal">
                                                                <%= task.status %>
                                                            </span>
                                                    </td>
                                                    <td>
                                                        <% if (task.tags) { %>
                                                            <% task.tags.split(',').forEach(tag=> { %>
                                                                <span
                                                                    class="badge bg-light text-dark border border-secondary-subtle fw-normal mb-1">
                                                                    <%= tag.trim() %>
                                                                </span>
                                                                <% }) %>
                                                                    <% } else { %><span
                                                                            class="text-muted small">-</span>
                                                                        <% } %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="9" class="text-center py-5 text-muted">
                                                                <div class="mb-2"><i data-feather="inbox"
                                                                        style="width: 40px; height: 40px; opacity: 0.5;"></i>
                                                                </div>
                                                                Không có dữ liệu công việc
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <script>
                        document.addEventListener("DOMContentLoaded", function () {
                            const table = document.getElementById("mainTable");
                            if (!table) return;
                            const tbody = table.querySelector("tbody");
                            const rows = Array.from(tbody.querySelectorAll("tr"));

                            // 1. HÀM TẠO CHECKLIST CHO DROPDOWN (ĐÃ SỬA LỖI DÍNH TAG)
                            function buildDropdowns() {
                                const dropdowns = document.querySelectorAll('.filter-dropdown');

                                dropdowns.forEach(dd => {
                                    const colIndex = parseInt(dd.dataset.col);
                                    const isTagColumn = colIndex === 8; // Giả sử cột Tag là cột số 8 (như trong code cũ)
                                    const isMultiValue = dd.dataset.multiValue === "true" || colIndex === 2; // Cột Người nhận hoặc Tag
                                    const container = dd.querySelector('.filter-options-container');

                                    let values = new Set();
                                    rows.forEach(row => {
                                        const cell = row.cells[colIndex];
                                        if (cell) {
                                            // [LOGIC MỚI CHO CỘT TAG]
                                            if (isTagColumn) {
                                                // Tìm tất cả các thẻ badge trong ô này
                                                const badges = cell.querySelectorAll('.badge');
                                                if (badges.length > 0) {
                                                    // Nếu có badge (VD: <span class="badge">A</span> <span class="badge">B</span>)
                                                    // Lấy nội dung từng badge riêng biệt
                                                    badges.forEach(b => {
                                                        const tagText = b.innerText.trim();
                                                        if (tagText && tagText !== '-') values.add(tagText);
                                                    });
                                                } else {
                                                    // Fallback: Nếu không có badge (text thường), tách bằng dấu phẩy
                                                    const text = cell.innerText.trim();
                                                    if (text && text !== '---' && text !== '-') {
                                                        text.split(',').forEach(t => values.add(t.trim()));
                                                    }
                                                }
                                            }
                                            // [LOGIC CŨ CHO CÁC CỘT KHÁC (Người nhận...)]
                                            else {
                                                let text = cell.innerText.trim();
                                                if (text && text !== '---' && text !== '-' && text !== 'Chưa giao') {
                                                    if (isMultiValue) {
                                                        text.split(/[\n,]+/).forEach(val => {
                                                            val = val.trim();
                                                            if (val) values.add(val);
                                                        });
                                                    } else {
                                                        values.add(text);
                                                    }
                                                }
                                            }
                                        }
                                    });

                                    // Render HTML
                                    let html = `<div class="form-check"><input class="form-check-input select-all" type="checkbox" checked onchange="toggleAll(this)"><label class="form-check-label fst-italic fw-bold">Chọn tất cả</label></div><hr class="my-1">`;

                                    Array.from(values).sort().forEach(val => {
                                        html += `<div class="form-check filter-item"><input class="form-check-input filter-check" type="checkbox" checked value="${val}" onchange="applyFilters()"><label class="form-check-label text-wrap small">${val}</label></div>`;
                                    });
                                    container.innerHTML = html;
                                });
                            }

                            window.applyFilters = function () {
                                const textInputs = document.querySelectorAll('.filter-input');
                                const dateFromInputs = document.querySelectorAll('.filter-date-from');
                                const dateToInputs = document.querySelectorAll('.filter-date-to');
                                const dropdowns = document.querySelectorAll('.filter-dropdown');

                                rows.forEach(row => {
                                    let show = true;
                                    textInputs.forEach(input => {
                                        const colIdx = input.dataset.col;
                                        if (input.value && !row.cells[colIdx].innerText.toLowerCase().includes(input.value.toLowerCase())) show = false;
                                    });

                                    if (show) {
                                        const parseDate = (str) => {
                                            if (!str || str.includes('-')) return null;
                                            const parts = str.trim().split(/[\s/:]+/);
                                            if (parts.length >= 3) return new Date(`${parts[2]}-${parts[1]}-${parts[0]}`);
                                            return null;
                                        };
                                        dateFromInputs.forEach(input => {
                                            const cellDate = parseDate(row.cells[input.dataset.col].innerText);
                                            if (input.valueAsDate && (!cellDate || cellDate < input.valueAsDate)) show = false;
                                        });
                                        dateToInputs.forEach(input => {
                                            const cellDate = parseDate(row.cells[input.dataset.col].innerText);
                                            if (input.valueAsDate && (!cellDate || cellDate > input.valueAsDate)) show = false;
                                        });
                                    }

                                    if (show) {
                                        dropdowns.forEach(dd => {
                                            const colIdx = dd.dataset.col;
                                            const cellText = row.cells[colIdx].innerText;
                                            const checkedBoxes = Array.from(dd.querySelectorAll('.filter-check:checked')).map(cb => cb.value);
                                            if (checkedBoxes.length === 0) show = false;
                                            else {
                                                const hasMatch = checkedBoxes.some(val => cellText.includes(val));
                                                if (!hasMatch) show = false;
                                            }
                                        });
                                    }
                                    row.style.display = show ? '' : 'none';
                                });
                            };

                            window.toggleAll = function (source) {
                                const checkboxes = source.closest('.filter-options-container').querySelectorAll('.filter-check');
                                checkboxes.forEach(cb => cb.checked = source.checked);
                                applyFilters();
                            };

                            window.filterDropdownItems = function (input) {
                                const filter = input.value.toLowerCase();
                                input.nextElementSibling.querySelectorAll('.filter-item').forEach(item => {
                                    item.style.display = item.innerText.toLowerCase().includes(filter) ? '' : 'none';
                                });
                            };

                            buildDropdowns();
                            document.querySelectorAll('.filter-input, .filter-date-from, .filter-date-to').forEach(el => el.addEventListener('input', applyFilters));
                            document.querySelectorAll('.dropdown-menu').forEach(menu => menu.addEventListener('click', e => e.stopPropagation()));
                        });
