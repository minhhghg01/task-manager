<%- include('../partials/header') %>

    <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">
            <%= (typeof pageTitle !=='undefined' ) ? pageTitle : 'Tổng quan công việc' %>
        </h1>

        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="/tasks/invited" class="btn btn-sm btn-outline-warning d-flex align-items-center gap-2 me-2">
                <span data-feather="mail"></span> Lời mời hợp tác
            </a>
            <% if (user.role !=='ADMIN' && user.role !=='STAFF' ) { %>
                <button type="button" class="btn btn-sm btn-primary d-flex align-items-center gap-2"
                    data-bs-toggle="modal" data-bs-target="#createTaskModal">
                    <span data-feather="plus"></span> Giao việc mới
                </button>
                <% } %>

                    <% if (user.role==='STAFF' || (typeof filterType !=='undefined' && filterType==='mine' )) { %>
                        <button type="button"
                            class="btn btn-sm btn-outline-success d-flex align-items-center gap-2 ms-2"
                            data-bs-toggle="modal" data-bs-target="#createTaskModal" data-auto-self="true">
                            <span data-feather="user-check"></span> Tự tạo việc
                        </button>
                        <% } %>
        </div>
    </div>

    <div class="table-responsive" style="min-height: 400px; padding-bottom: 100px;">
        <table class="table table-striped table-hover align-middle" id="mainTable">
            <thead class="sticky-top" style="z-index: 100; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                <tr class="table-dark">
                    <th class="text-center text-nowrap" style="width: 5%">STT</th>
                    <th class="text-nowrap" style="width: 20%">Tiêu đề</th>
                    <th class="text-nowrap" style="width: 15%">Người nhận</th>
                    <th class="text-nowrap" style="width: 10%">Bắt đầu</th>
                    <th class="text-nowrap" style="width: 10%">Hạn chót</th>
                    <th class="text-nowrap" style="width: 10%">Người tạo</th>
                    <th class="text-nowrap" style="width: 10%">Ưu tiên</th>
                    <th class="text-nowrap" style="width: 10%">Trạng thái</th>
                    <th class="text-nowrap" style="width: 10%">Nhãn</th>
                </tr>

                <tr class="bg-white border-bottom shadow-sm align-middle">
                    <td class="p-1"></td>

                    <td class="p-1">
                        <input type="text" class="form-control form-control-sm filter-input shadow-none" data-col="1"
                            placeholder="Tìm..." style="font-size: 0.85rem;">
                    </td>

                    <td class="p-1 position-relative">
                        <div class="dropdown filter-dropdown" data-col="2">
                            <button
                                class="btn btn-sm btn-outline-secondary w-100 dropdown-toggle text-truncate shadow-none d-flex justify-content-between align-items-center px-2"
                                type="button" data-bs-toggle="dropdown" style="font-size: 0.8rem;">
                                <span>Tất cả</span>
                            </button>
                            <div class="dropdown-menu p-2 shadow border-0"
                                style="max-height: 300px; overflow-y: auto; width: 220px;">
                                <input type="text" class="form-control form-control-sm mb-2" placeholder="Tìm người..."
                                    onkeyup="filterDropdownItems(this)">
                                <div class="filter-options-container"></div>
                            </div>
                        </div>
                    </td>

                    <td class="p-1">
                        <div class="d-flex flex-column gap-1">
                            <input type="date" class="form-control form-control-sm filter-date-from shadow-none px-1"
                                data-col="3" style="font-size: 0.75rem; height: 24px;">
                            <input type="date" class="form-control form-control-sm filter-date-to shadow-none px-1"
                                data-col="3" style="font-size: 0.75rem; height: 24px;">
                        </div>
                    </td>

                    <td class="p-1">
                        <div class="d-flex flex-column gap-1">
                            <input type="date" class="form-control form-control-sm filter-date-from shadow-none px-1"
                                data-col="4" style="font-size: 0.75rem; height: 24px;">
                            <input type="date" class="form-control form-control-sm filter-date-to shadow-none px-1"
                                data-col="4" style="font-size: 0.75rem; height: 24px;">
                        </div>
                    </td>

                    <td class="p-1 position-relative">
                        <div class="dropdown filter-dropdown" data-col="5">
                            <button
                                class="btn btn-sm btn-outline-secondary w-100 dropdown-toggle text-truncate shadow-none px-1"
                                type="button" data-bs-toggle="dropdown" style="font-size: 0.8rem;">All</button>
                            <div class="dropdown-menu p-2 shadow border-0" style="max-height: 300px; overflow-y: auto;">
                                <div class="filter-options-container"></div>
                            </div>
                        </div>
                    </td>

                    <td class="p-1 position-relative">
                        <div class="dropdown filter-dropdown" data-col="6">
                            <button
                                class="btn btn-sm btn-outline-secondary w-100 dropdown-toggle text-truncate shadow-none px-1"
                                type="button" data-bs-toggle="dropdown" style="font-size: 0.8rem;">All</button>
                            <div class="dropdown-menu p-2 shadow border-0">
                                <div class="filter-options-container"></div>
                            </div>
                        </div>
                    </td>

                    <td class="p-1 position-relative">
                        <div class="dropdown filter-dropdown" data-col="7">
                            <button
                                class="btn btn-sm btn-outline-secondary w-100 dropdown-toggle text-truncate shadow-none px-1"
                                type="button" data-bs-toggle="dropdown" style="font-size: 0.8rem;">All</button>
                            <div class="dropdown-menu p-2 shadow border-0">
                                <div class="filter-options-container"></div>
                            </div>
                        </div>
                    </td>

                    <td class="p-1 position-relative">
                        <div class="dropdown filter-dropdown" data-col="8" data-multi-value="true">
                            <button
                                class="btn btn-sm btn-outline-secondary w-100 dropdown-toggle text-truncate shadow-none px-1"
                                type="button" data-bs-toggle="dropdown" style="font-size: 0.8rem;">Tags</button>
                            <div class="dropdown-menu p-2 shadow border-0 dropdown-menu-end" style="width: 200px;">
                                <div class="filter-options-container"></div>
                            </div>
                        </div>
                    </td>
                </tr>
            </thead>
            <tbody>
                <% if (tasks && tasks.length> 0) { %>
                    <% tasks.forEach((task, index)=> { %>
                        <tr style="cursor: pointer;" onclick="window.location.href='/tasks/<%= task.id %>'">

                            <td>
                                <%= index + 1 %>
                            </td>

                            <td>
                                <strong>
                                    <%= task.title %>
                                </strong>
                                <% if(task.attachment_path) { %>
                                    <i data-feather="paperclip" class="text-muted" style="width:14px"></i>
                                    <% } %>
                                        <br>
                                        <small class="text-muted text-truncate"
                                            style="max-width: 250px; display: inline-block;">
                                            <%= task.description %>
                                        </small>
                                        <% if(task.progress> 0 && task.progress < 100) { %>
                                                <div class="progress mt-1" style="height: 3px; width: 50%;">
                                                    <div class="progress-bar" style="width: <%= task.progress %>%;">
                                                    </div>
                                                </div>
                                                <% } %>
                            </td>

                            <td>
                                <small class="text-primary fw-bold">
                                    <%= task.assigneeNames || 'Chưa giao' %>
                                </small>
                            </td>

                            <td>
                                <%= task.start_date ? new Date(task.start_date).toLocaleDateString('vi-VN') : '---' %>
                            </td>

                            <td>
                                <% var dueDate=task.due_date ? new Date(task.due_date) : null; var now=new Date(); var
                                    isOverdue=dueDate && dueDate < now && task.status !=='Hoàn thành' ; %>
                                    <span class="<%= isOverdue ? 'text-danger fw-bold' : '' %>">
                                        <%= task.formattedDueDate || (dueDate ? dueDate.toLocaleDateString('vi-VN')
                                            : '---' ) %>
                                    </span>
                                    <% if(isOverdue) { %>
                                        <i data-feather="alert-circle" class="text-danger" style="width:14px"></i>
                                        <% } %>
                            </td>

                            <td>
                                <%= task.Creator ? task.Creator.fullname : 'N/A' %>
                            </td>

                            <td>
                                <% var pColor='secondary' ; if(task.priority=='Cao (Gấp)' ) pColor='danger' ; else
                                    if(task.priority=='Trung bình' ) pColor='warning text-dark' ; else
                                    if(task.priority=='Thấp' ) pColor='info text-dark' ; %>
                                    <span class="badge bg-<%= pColor %>">
                                        <%= task.priority %>
                                    </span>
                            </td>

                            <td>
                                <% var sColor='secondary' ; if(task.status=='Mới tạo' ) sColor='info text-dark' ; else
                                    if(task.status=='Đang thực hiện' ) sColor='primary' ; else
                                    if(task.status=='Hoàn thành' ) sColor='success' ; else if(task.status=='Quá hạn' )
                                    sColor='danger' ; else if(task.status=='Đang chờ' ) sColor='warning text-dark' ; %>
                                    <span class="badge bg-<%= sColor %>">
                                        <%= task.status %>
                                    </span>
                            </td>

                            <td>
                                <% if (task.tags) { %>
                                    <span class="badge border border-info text-info">
                                        <%= task.tags %>
                                    </span>
                                    <% } else { %>
                                        <span class="text-muted">---</span>
                                        <% } %>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="9" class="text-center text-muted py-3">Không có dữ liệu</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/modal-create-task') %>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const table = document.getElementById("mainTable");
                if (!table) return;
                const tbody = table.querySelector("tbody");
                const rows = Array.from(tbody.querySelectorAll("tr"));

                // 1. HÀM TẠO CHECKLIST CHO DROPDOWN (ĐÃ SỬA TÁCH TÊN NGƯỜI)
                function buildDropdowns() {
                    const dropdowns = document.querySelectorAll('.filter-dropdown');

                    dropdowns.forEach(dd => {
                        const colIndex = parseInt(dd.dataset.col);
                        // [SỬA]: Thêm điều kiện: Cột 2 (Người nhận) hoặc Cột 8 (Tags) đều cần tách dấu phẩy
                        const isMultiValue = dd.dataset.multiValue === "true" || colIndex === 2;
                        const container = dd.querySelector('.filter-options-container');

                        let values = new Set();
                        rows.forEach(row => {
                            const cell = row.cells[colIndex];
                            if (cell) {
                                let text = cell.innerText.trim();
                                if (text === '' || text === '---') return;

                                if (isMultiValue) {
                                    // [QUAN TRỌNG]: Tách bằng dấu phẩy HOẶC xuống dòng
                                    // Logic: Tách người A, người B ra thành các item riêng
                                    text.split(/[\n,]+/).forEach(val => {
                                        val = val.trim();
                                        if (val && val !== 'Chưa giao') values.add(val);
                                    });
                                } else {
                                    text.split('\n').forEach(val => values.add(val.trim()));
                                }
                            }
                        });

                        // (Phần tạo HTML checkbox giữ nguyên như cũ)
                        let html = `
                        <div class="form-check">
                            <input class="form-check-input select-all" type="checkbox" checked onchange="toggleAll(this)">
                            <label class="form-check-label fst-italic fw-bold">Chọn tất cả</label>
                        </div>
                        <hr class="my-1">
                    `;

                        Array.from(values).sort().forEach(val => {
                            if (val) {
                                html += `
                                <div class="form-check filter-item">
                                    <input class="form-check-input filter-check" type="checkbox" checked value="${val}" onchange="applyFilters()">
                                    <label class="form-check-label text-wrap">${val}</label>
                                </div>
                            `;
                            }
                        });

                        container.innerHTML = html;
                    });
                }

                // 2. HÀM LỌC CHÍNH
                window.applyFilters = function () {
                    // Lấy giá trị các ô Text Search
                    const textInputs = document.querySelectorAll('.filter-input');

                    // Lấy giá trị Date Range
                    const dateFromInputs = document.querySelectorAll('.filter-date-from');
                    const dateToInputs = document.querySelectorAll('.filter-date-to');

                    // Lấy giá trị Dropdowns
                    const dropdowns = document.querySelectorAll('.filter-dropdown');

                    rows.forEach(row => {
                        let show = true;

                        // A. LỌC TEXT (Tiêu đề)
                        textInputs.forEach(input => {
                            const colIdx = input.dataset.col;
                            const cellText = row.cells[colIdx].innerText.toLowerCase();
                            if (input.value && !cellText.includes(input.value.toLowerCase())) show = false;
                        });

                        // B. LỌC NGÀY (Start / Due)
                        if (show) {
                            const parseDate = (str) => {
                                if (!str || str.includes('---')) return null;
                                const parts = str.trim().split(/[\s/:]+/);
                                // Format: DD/MM/YYYY
                                if (parts.length >= 3) return new Date(`${parts[2]}-${parts[1]}-${parts[0]}`);
                                return null;
                            };

                            // Check From...
                            dateFromInputs.forEach(input => {
                                const colIdx = input.dataset.col;
                                const filterDate = input.valueAsDate;
                                const cellDate = parseDate(row.cells[colIdx].innerText);
                                if (filterDate && (!cellDate || cellDate < filterDate)) show = false;
                            });

                            // Check To...
                            dateToInputs.forEach(input => {
                                const colIdx = input.dataset.col;
                                const filterDate = input.valueAsDate;
                                const cellDate = parseDate(row.cells[colIdx].innerText);
                                if (filterDate && (!cellDate || cellDate > filterDate)) show = false;
                            });
                        }

                        // C. LỌC DROPDOWN (Checklist)
                        if (show) {
                            dropdowns.forEach(dd => {
                                const colIdx = dd.dataset.col;
                                const isMultiValue = dd.dataset.multiValue === "true";
                                const cellText = row.cells[colIdx].innerText;

                                // Lấy danh sách những cái ĐƯỢC CHỌN
                                const checkedBoxes = Array.from(dd.querySelectorAll('.filter-check:checked')).map(cb => cb.value);

                                // Nếu không chọn cái nào -> Ẩn (Trừ khi Select All được chọn logic khác, nhưng ở đây ta dùng logic Checked)
                                if (checkedBoxes.length === 0) {
                                    show = false;
                                } else {
                                    // Kiểm tra xem ô dữ liệu có chứa ÍT NHẤT 1 trong các giá trị được tick không
                                    // VD: Ô là "Tag A, Tag B". Tick "Tag A" -> Hiện.
                                    const hasMatch = checkedBoxes.some(val => cellText.includes(val));
                                    if (!hasMatch) show = false;
                                }
                            });
                        }

                        row.style.display = show ? '' : 'none';
                    });
                };

                // 3. HÀM CHECK ALL
                window.toggleAll = function (source) {
                    const container = source.closest('.filter-options-container');
                    const checkboxes = container.querySelectorAll('.filter-check');
                    checkboxes.forEach(cb => cb.checked = source.checked);
                    applyFilters();
                };

                // 4. HÀM TÌM KIẾM TRONG DROPDOWN (Cho danh sách người dùng dài)
                window.filterDropdownItems = function (input) {
                    const filter = input.value.toLowerCase();
                    const container = input.nextElementSibling;
                    const items = container.querySelectorAll('.filter-item');
                    items.forEach(item => {
                        const text = item.innerText.toLowerCase();
                        item.style.display = text.includes(filter) ? '' : 'none';
                    });
                };

                // INIT
                buildDropdowns();

                // Gán sự kiện cho các ô input text/date
                document.querySelectorAll('.filter-input, .filter-date-from, .filter-date-to').forEach(el => {
                    el.addEventListener('input', applyFilters);
                });

                // Chặn click dropdown bị đóng khi bấm input search bên trong
                document.querySelectorAll('.dropdown-menu').forEach(menu => {
                    menu.addEventListener('click', e => e.stopPropagation());
                });
            });
        </script>

        <%- include('../partials/footer') %>