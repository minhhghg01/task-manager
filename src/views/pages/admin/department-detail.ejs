<%- include('../../partials/header') %>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Chi tiết Khoa/Phòng</h3>

            <button type="button"
                onclick="confirmDelete('/admin/departments/delete/<%= dept.id %>', 'Xóa khoa <%= dept.name %>?')"
                class="btn btn-danger">
                <span data-feather="trash-2"></span> Xóa khoa này
            </button>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                Thông tin: <%= dept.name %>
            </div>
            <div class="card-body">
                <form action="/admin/departments/update/<%= dept.id %>" method="POST">

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên Khoa</label>
                        <input type="text" name="name" class="form-control" value="<%= dept.name %>" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mã Khoa (Code)</label>
                        <input type="text" name="code" class="form-control" value="<%= dept.code %>" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Trạng thái</label>
                        <select name="status" class="form-select">
                            <option value="active" <%=dept.status==='active' ? 'selected' : '' %>>Hoạt động</option>
                            <option value="inactive" <%=dept.status==='inactive' ? 'selected' : '' %>>Ngừng hoạt động
                            </option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-end mt-3 border-top pt-3">
                        <a href="/admin/departments" class="btn btn-secondary me-2">Quay lại danh sách</a>
                        <button type="submit" class="btn btn-success"><span data-feather="save"></span> Lưu thay
                            đổi</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <%- include('../../partials/footer') %>