<%- include('../../partials/header') %>
    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
        <h2>Quản lý Nhân sự</h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addUserModal">+ Thêm Nhân viên</button>
    </div>

    <div class="table-responsive">
        <table class="table table-sm table-striped table-hover datatable-init">
            <thead class="table-dark">
                <tr>
                    <th>STT</th>
                    <th>ID</th>
                    <th>Họ tên</th>
                    <th>Tài khoản</th>
                    <th>Khoa/Phòng</th>
                    <th>Chức vụ</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((u, index)=> { %>
                    <tr style="cursor: pointer;" onclick="window.location.href='/admin/users/detail/<%= u.id %>'">
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <%= u.id %>
                        </td>
                        <td><strong>
                                <%= u.fullname %>
                            </strong></td>
                        <td>
                            <%= u.username %>
                        </td>
                        <td><span class="badge bg-info text-dark">
                                <%= u.Department ? u.Department.name : 'Chưa phân' %>
                            </span></td>
                        <td>
                            <%= u.role %>
                        </td>
                        <td>
                            <% if(u.status==='active' ) { %>
                                <span class="text-success">Hoạt động</span>
                                <% } else { %>
                                    <span class="text-secondary">Khóa</span>
                                    <% } %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="addUserModal" tabindex="-1">
        <div class="modal-dialog">
            <form action="/admin/users/create" method="POST">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Thêm Nhân viên</h5><button type="button" class="btn-close"
                            data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-2"><label>Họ tên</label><input type="text" name="fullname" class="form-control"
                                required></div>
                        <div class="mb-2"><label>Username</label><input type="text" name="username" class="form-control"
                                required></div>
                        <div class="mb-2"><label>Password</label><input type="password" name="password"
                                class="form-control" required></div>
                        <div class="mb-2">
                            <label>Khoa/Phòng</label>
                            <select name="departments_id" class="form-select">
                                <% departments.forEach(d=> { %>
                                    <option value="<%= d.id %>">
                                        <%= d.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="mb-2">
                            <label>Chức vụ</label>
                            <select name="role" class="form-select">
                                <option value="STAFF">Nhân viên</option>
                                <option value="LEADER">Tổ trưởng</option>
                                <option value="DEPUTY">Phó khoa</option>
                                <option value="HEAD">Trưởng khoa</option>
                                <option value="DEPUTY_DIRECTOR">Phó Giám Đốc</option>
                                <option value="DIRECTOR">Giám Đốc</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer"><button type="submit" class="btn btn-primary">Tạo mới</button></div>
                </div>
            </form>
        </div>
    </div>

    <%- include('../../partials/footer') %>